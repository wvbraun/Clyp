@import '../config'

.react-remodal
  &__dialog
    border-radius 4px
    color clyp_dark
    background clyp_cream

    &.upload-modal-wrapper
      max-width: 420px;


.upload-modal-wrapper
  max-width 420px
  & .modal-content
    border 4px !important
    padding 15px 10px
    color clyp_dark
    background clyp_cream

  & .modal-body
    height 460px
    padding 0px

  & .upload-modal
    max-width none
    overflow hidden
    width 100%

.upload-zone
  width 100%
  height 363px
  margin 20px 0 15px 0
  border-radius 4px
  display -ms-flexbox
  display flex
  -ms-flex-align center
  align-items center
  -ms-flex-pack center
  justify-content center
  -ms-flex-direction column
  flex-direction column
  background-color gray_border
  cursor pointer

.terms-clause
  font-size 13px
  text-align center
  width 100%
  position absolute
  bottom 2px
  & a
    color clyp_green
